//- index.jade
doctype html
head
  title= data.title

  meta(name="keywords" content="#{data.metaKeywords}")
  meta(name="description" content="#{data.metaDescription}")
  meta(name="yandex-verification" content="6204f7463fd80fb0")

  link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.2/readable/bootstrap.min.css", rel="stylesheet")
  link(href="/css/main.css", rel="stylesheet")
  link(href="/", rel="canonical")

body
  include ./../../client/yandex.html
  include ./../../client/mail-counter.html

  div(class="col-lg-2 col-md-1 hidden-sm hidden-xs")
  div(class="col-lg-8 col-md-10 col-sm-12 col-xs-12")

    include ./navbar.jade

    //- header
    header(class="col-lg-12 col-md-12 col-sm-12 col-xs-12 main-header")
      figure(class="col-lg-4 col-md-4 col-sm-4 col-xs-4 main-header__figure")
        img(class="main-header__main-pic" src="#{data.mainImage.source}" alt="#{data.mainImage.alt}" title="#{data.mainImage.title}")
      div(class="col-lg-8 col-md-8 col-sm-8 col-xs-8 main-header__text-board")
        h1(class="main-header__header")= data.mainHeader
        p(class="main-header__description")= data.mainDescription

    nav(class="col-lg-3 col-md-3 col-sm-3 col-xs-3")
      h3(class=)= 'Темы историй:'
      ul(class="nav nav-pills nav-stacked aside-area__list")
        li
          a(href="/1")= 'Грустные истории'
        li
          a(href="/2")= 'Интимные истории'
        li
          a(href="/3")= 'Кавказские истории'

    #content-container(class="col-lg-9 col-md-9 col-sm-9 col-xs-9 main-container")!= data.html

  div(style="display:none;")
    include ./../../client/rambler-counter.html

script!= "var INITIAL_STATE = " + data.init + ";"

include ./scripts.jade

script(src="/js/bundle.js" async="async")

